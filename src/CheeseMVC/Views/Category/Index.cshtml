@using CheeseMVC.Models
@model List<CheeseCategory>

@{
    ViewData["Title"] = "index";
}

<h1>index</h1>

@if (Model.Count == 0)
{
    <p>No categories yet</p>
}
else
{
    <ul>
        @foreach (var category in Model)
        {
            <li style="text-decoration: none;"><a asp-action="Category" asp-controller="Cheese" asp-route-id="@category.ID">@category.Name</a></li>
        }
    </ul>
}

<p><a asp-action="Add" asp-controller="Category">Add category</a></p>