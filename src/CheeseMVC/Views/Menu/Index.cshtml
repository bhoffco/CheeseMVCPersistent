
@{
}

@using CheeseMVC.Models
@model List<Menu>
@{
    ViewData["Title"] = "Menus";
}

<h2>Menus</h2>

@if (Model.Count == 0)
{
    <p>No menus yet!</p>
}
else
{
    <ul>
        @foreach (var menu in Model)
        {
            <li><a asp-controller="Menu" asp-action="ViewMenu" asp-route-id="@menu.ID">@menu.Name</a></li>
        }
    </ul>
}

<p><a  asp-action="Add" asp-controller="Menu">Add Menu</a></p>
